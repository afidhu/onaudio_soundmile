<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Theme applied to the Android Window while the process is starting.
         This theme is visible until the Flutter engine renders its first frame. -->
    <style name="LaunchTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Set a background for the splash screen -->
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <!-- Normal theme for the app, applied once Flutter is running -->
    <style name="NormalTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- This keeps the default system background -->
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>

</resources>
